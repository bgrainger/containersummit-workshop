{
  "consul": "{{ .CONSUL_HOST }}:8500",
  "services": [
    {
      "name": "humidity",
      "health": "/usr/bin/curl -o /dev/null --fail -s http://localhost:8080/heartbeat",
      "poll": 3,
      "ttl": 10
    }
  ],
  "coprocesses": [
    {
      "command": ["/usr/local/bin/consul", "agent",
                  "-data-dir=/data",
                  "-config-dir=/config",
                  "-rejoin",
                  "-retry-join", "{{ .CONSUL_HOST }}",
                  "-retry-max", "10",
                  "-retry-interval", "10s"],
      "restarts": "unlimited"
    }
  ],
  "backends": [
    {
      "name": "serializer",
      "poll": 3,
      "onChange": "pkill -SIGHUP node"
    }
  ]
}